 <% case booking.status %>
 <% when "pending" %>
  <span class="badge bg-warning text-dark m-2" style="font-size: 12px; height: 24px"><%= booking.status %></span>
 <% when "accepted" %>
  <span class="badge bg-success m-2" style="font-size: 12px; height: 24px"><%= booking.status %></span>
 <% when "refused" %>
  <span class="badge bg-danger m-2" style="font-size: 12px; height: 24px"><%= booking.status %></span>
 <% when "passed" %>
  <span class="badge bg-light text-dark m-2" style="font-size: 12px; height: 24px"><%= booking.status %></span>
<% end %>
