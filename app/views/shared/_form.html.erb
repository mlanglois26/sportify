<%= simple_form_for @product do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :price_per_day %>
  <%= f.input :year_of_purchase %>
  <%= f.input :condition %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: 'btn btn-flat' %>
<% end %>
