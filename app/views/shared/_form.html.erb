<%= simple_form_for @product do |f| %>
  <%= f.input :name %>
  <%= f.input :category, as: :select, collection: Product::CATEGORY %>
  <%= f.input :sport, as: :select, collection: Product::SPORT %>
  <%= f.input :price_per_day %>
  <%= f.input :year_of_purchase %>
  <%= f.input :condition, as: :select, collection: Product::CONDITION %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: 'btn btn-flat' %>
<% end %>
