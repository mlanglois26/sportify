
<div class="row">
  <% bookings.each do |booking| %>
    <div class="col-2 mt-3">
      <%# product = booking.product %>
      <%= link_to booking_path(booking), class:"text-decoration-none" do %>
        <div class="card-category d-flex flex-column justify-content-between"
             style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path booking.product.photos[0].key, crop: :fill %>');
                    background-position: center;
                    background-size: cover;
                    height: 200px;
                    border-radius: 5px;">
          <h4 class="p-2 m-0"><%= booking.product.name.capitalize %></h4>
          <% if booking.pending? %>
            <%= render "bookings/status", booking: booking %>
          <% end %>
          <div class="d-flex flex-column text-white pb-2">
            <span class="ps-2 pe-2" >Owner: <%= booking.product.user.first_name %></span>
            <span class="ps-2 pe-2" >
              <%= booking.start_date.to_fs(:rfc822) %> - <%= booking.end_date.to_fs(:rfc822) %>
              <% if (booking.end_date - Date.today).to_i >= 0%>
                (<%= (booking.end_date - Date.today).to_i %> days left)
              <% end %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
