
  <% bookings_pending.each do |booking| %>

      <div class="m-3">
        <div class="d-flex align-items-center">
          <div class="pe-4">
            <% if booking.user.photo.attached? %>
              <%= cl_image_tag booking.user.photo.key, crop: :fill, class:"avatar-large p-0" %>
            <% else %>
              <%= image_tag "https://images.unsplash.com/photo-1511367461989-f85a21fda167?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NTR8fGJsZXV8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60", class: "avatar-large" %>
            <% end %>
          </div>

          <div class="d-flex flex-column">

            <%= link_to booking_path(booking), class:'text-decoration-none d-flex flex-column' do %>
              <span style="color: #333333;font-weight: 600;"><%= booking.user.first_name %> wants to rent your product : <%= booking.product.name %></span>
              <span style="color: #333333;font-size: 15px;"><%= booking.start_date.to_fs(:rfc822) %> - <%= booking.end_date.to_fs(:rfc822) %> </span>
            <% end %>

            <div class="d-flex">
              <%= button_to "Accept", accept_booking_path(booking), method: :post, class:"btn btn-primary me-1", style:"font-size:12px;color:white;"%>
              <%= button_to "Refuse", refuse_booking_path(booking), method: :post, class:"btn btn-success me-1", style:"font-size:12px"%>
            </div>

          </div>

        </div>
      </div>

  <% end %>
