<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our available products</h1>
    </div>
  </div>
</div>

<div class="row mb-3 ">
  <%= render 'products/carousel', products: @products %>
</div>

<button id="map-button" data-controller="show-map" data-action="click->show-map#show"> Click</button>

<div id="map-div">
  <div id="map-box" style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
