<div class="row image-gallery">

  <div class="col-6 p-2">
    <%= cl_image_tag product.photos.first.key, class:"height: 100%"%>
  </div>

  <div class="col-6">
    <div class="row">

      <div class="col-6 p-2">
        <%= cl_image_tag product.photos[1].key %>
      </div>

      <div class="col-6 p-2">
        <%= cl_image_tag product.photos[2].key %>
      </div>

    </div>
    <div class="row">

      <div class="col-6 p-2">
        <%= cl_image_tag product.photos[3].key %>
      </div>

      <div class="col-6 p-2">
        <%= cl_image_tag product.photos[4].key  if @product.photos[4] %>
      </div>

    </div>
  </div>
</div>
