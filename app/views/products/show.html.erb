<div class="container margin-top-negative mt-3">
  <h1><%= @product.name.capitalize %></h1>

  <%= render "products/gallery", product: @product %>

  <div class="row mt-3">

    <div class="col-8">
      <div class="border-bottom d-flex align-items-center justify-content-between pb-3">
        <h3>Rent this item offered by <strong><%= @product.user.first_name %></strong></h3>
        <%= cl_image_tag @product.user.photo.key, crop: :fill, class:"rounded-circle", style:"width:70px; height:70px;" %>
      </div>
      <div class="border-bottom pt-3">
        <div class="d-flex align-items-center p-3">
          <%= image_tag "sport.svg", height: 30, width: 30, alt: "Sport" %>
          <div class="ps-3"><%= "#{@product.sport}" %></div>
        </div>
        <div class="d-flex align-items-center p-3">
          <%= image_tag "time.svg", height: 30, width: 30, alt: "Years of use" %>
          <div class="ps-3"><%= "Manufactured in #{@product.year_of_purchase}" %></div>
        </div>
        <div class="d-flex align-items-center p-3">
          <%= image_tag "condition.svg", height: 30, width: 30, alt: "Condition" %>
          <div class="ps-3"><%= "The product #{@product.condition.downcase}" %></div>
        </div>
      </div>
    </div>


    <div class="col-4">
      <div class="product-show-card" data-controller="dynamic-booking-price"
      data-dynamic-booking-price-price-value="<%= @product.price_per_day %>">

      <div class="test p-4 shadow d-flex justify-content-center align-items-center text-center">
        <%= simple_form_for [@product, @booking], html: {
              data: {
                controller: 'flatpickr',
                flatpickr_dates_value: @product.flatpickr_booked_dates_object
              }
            }  do |f| %>
          <h5>Book this product!</h5>

          <%= f.input :start_date, label: false, as: :string,
                                  input_html: {
                                    class: 'd-none',
                                    data: {
                                      flatpickr_target: 'startDateInput',
                                      dynamic_booking_price_target: 'startDateInput',
                                      action: 'change->dynamic-booking-price#updatePrice'
                                    }
                                } %>
          <%= f.input :end_date, label: false, as: :string,
                                  input_html: {
                                    class: 'd-none',
                                    data: {
                                      flatpickr_target: 'endDateInput',
                                      dynamic_booking_price_target: 'endDateInput',
                                      action: 'change->dynamic-booking-price#updatePrice'
                                    }
                                } %>
          <p>
            <span>Total Price = </span><span data-dynamic-booking-price-target="priceHolder"><%= @product.price_per_day %></span>
            <span>â‚¬</span>
          </p>
          <%= f.input :product_id, as: :hidden, input_html: { value: @product.id } %>
          <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
          <%= f.submit class: 'btn btn-primary w-100' %>
        <% end %>

      </div>
      </div>
    </div>
  </div>
</div>
